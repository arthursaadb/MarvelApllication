<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_character_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_character_name"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text__default_margin"
        android:layout_marginTop="@dimen/text__default_margin"
        android:layout_marginEnd="@dimen/text__default_margin"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_character_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="DESENVOLVEDOR ANDROID" />


    <TextView
        android:id="@+id/tv_character_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/text__default_margin"
        android:layout_marginBottom="@dimen/text__default_margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_character_name"
        app:layout_constraintStart_toStartOf="@id/tv_character_name"
        app:layout_constraintTop_toBottomOf="@id/tv_character_name"
        tools:text="Esse Ã© um personagem da marvel " />


</androidx.constraintlayout.widget.ConstraintLayout>